@model asp_net_project.ViewModels.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Registration Form</h2>

<form class="container-fluid m-auto bg-white p-5 border round" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="mb-3">
            <label asp-for="Login">Введите логин</label>
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div class="mb-3">
            <label asp-for="Password">Введите пароль</label>
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword">Повторите пароль</label>
            <input type="password" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="mb-3">
            <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
        </div>
    </div>
</form>